{
    "plugins": [
        "edit-link",
        "exercises",
        "expandable-chapters",
        "ga",
        "github",
        "heading-anchors",
        "quiz",
        "splitter",
        "toggle-chapters",
        "word-count",
        "youtube"
    ],
    "pluginsConfig": {
        "edit-link": {
                "base": "https://github.com/jackdougherty/gitbook-on-github/tree/dev/",
                "label": "Edit on GitHub"
        },
        "ga": {
            "token": "UA-XXXXX-XX"
        },
        "github": {
            "url": "https://github.com/JackDougherty?tab=repositories"
        },
        "quiz": {
            "labels": {
                "check"             : "Check my answers",
                "showExplanation"   : "Explain", 
                "showCorrect"       : "Show all",   
                "explanationHeader" : "Explanation"
            },
            "text": {
                "noChosen"    : "Choose at least one answer",  
                "incomplete"  : "Some correct answers are missing" 
            },
            "buttons": {
                "showCorrect"       : true, 
                "showExplanation"   : true 
            }
        }
    }
}
